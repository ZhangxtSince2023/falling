{
  "name": "falling",
  "version": "1.0.0",
  "description": "一个简单的手机休闲游戏，玩家控制小球在不断下落的过程中躲避触碰屏幕上边界。",
  "main": "game.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "build:web": "bash build-web.sh",
    "build:wechat": "bash build-wechat.sh",
    "build:all": "npm run build:web && npm run build:wechat",
    "build": "npm run build:all",
    "serve": "npx http-server dist/web -p 8080",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:run:ios": "npx cap run ios",
    "cap:run:android": "npx cap run android"
  },
  "keywords": ["game", "phaser", "mobile", "falling", "casual"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0"
  }
}
