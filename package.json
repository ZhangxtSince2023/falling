{
  "name": "falling",
  "version": "0.0.1",
  "description": "一个简单的手机休闲游戏，玩家控制小球在不断下落的过程中躲避触碰屏幕上边界。",
  "main": "src/game-scene.ts",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build:ios": "npm run build && npx cap sync ios",
    "build:android": "npm run build && npx cap sync android",
    "cap:sync": "npm run build && npx cap sync",
    "cap:open:ios": "npx cap open ios",
    "cap:open:android": "npx cap open android",
    "cap:run:ios": "npm run build:ios && npx cap run ios",
    "cap:run:android": "npm run build:android && npx cap run android"
  },
  "keywords": [
    "game",
    "phaser",
    "mobile",
    "falling",
    "casual"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "phaser": "^3.90.0",
    "playwright": "^1.56.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "dependencies": {
    "@capacitor/haptics": "^7.0.2",
    "axios": "^1.13.2",
    "form-data": "^4.0.5",
    "google-auth-library": "^10.5.0"
  }
}
